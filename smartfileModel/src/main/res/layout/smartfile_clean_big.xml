<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="190dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/funType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="27dp"
            android:src="@mipmap/smartfile_clean"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/funType"
            android:layout_toRightOf="@id/funType"
            android:layout_alignBottom="@id/funType"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Your phone has "
                android:textColor="#201F31"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvSize"
                android:layout_toRightOf="@id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="5.2G"
                android:textStyle="bold"
                android:textColor="#fa5151"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv1"
                android:text=" garbage,clean it up nowï¼"
                android:textColor="#201F31"
                android:textSize="14sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@id/funType"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/smartfile_ntbtn"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="Clean Now"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </RelativeLayout>

</LinearLayout>
