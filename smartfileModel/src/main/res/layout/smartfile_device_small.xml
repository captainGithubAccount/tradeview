<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/funType"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/smartfile_device" />

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/funType"
            android:layout_alignBottom="@id/funType"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"
            android:layout_toRightOf="@id/funType"
            android:gravity="center_vertical"
            android:text="You haven't scan your device in a long time."
            android:textColor="#121212"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>
